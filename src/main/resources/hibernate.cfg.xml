<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- === CORRIGEZ CES LIGNES === -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/restaurant_db?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <!-- ↑↑↑ Mot de passe VIDE  pas de mot de passe ↑↑↑ -->

        <!-- Configuration Hibernate -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property> <!--pas 'create' car à chaque demarrage il va creer les tables à nouveau et il va supp les data-->

        <!-- Pool de connexions (optionnel pour débuter) -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Mapping des entités -->
        <mapping class="com.restaurant.model.User"/>
        <mapping class="com.restaurant.model.Categorie"/>
        <mapping class="com.restaurant.model.Plat"/>
        <mapping class="com.restaurant.model.Client"/>
        <mapping class="com.restaurant.model.TableRestaurant"/>
        <mapping class="com.restaurant.model.Commande"/>
        <mapping class="com.restaurant.model.LigneCommande"/>
    </session-factory>
</hibernate-configuration>